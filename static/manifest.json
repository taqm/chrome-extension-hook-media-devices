{
  "manifest_version": 3,
  "name": "HookMediaDevices",
  "version": "0.0.1",
  "content_scripts": [
    {
      "matches": ["https://*/*"],
      "js": ["loader.js"]
    }
  ],
  "permissions": [
    "https://localhost:*/",
    "https://meet.google.com/"
  ],
  "web_accessible_resources": [
    {
      "resources": ["content.js"],
      "matches": ["https://*/*"]
    }
  ]
}
